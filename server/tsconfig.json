{
  "compilerOptions": {
    "isolatedModules": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["es2021", "dom"],
    "types": [
      "node"
      ]
  },

  "include": ["src/**/*.ts"],
  // "exclude": [
  //   "test.ts",
  //   "**/*.spec.ts"
  // ],

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },

  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,

    "files": true
  }
}
