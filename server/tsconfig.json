{
  "compilerOptions": {
    "isolatedModules": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}